<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageButton
        android:id="@+id/btncerrar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="#fff"
        android:background="@color/colorFondoOpaco"
        android:src="@drawable/ic_close"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:elevation="4dp"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorFondo2">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="0dp">

    <LinearLayout
        android:id="@+id/linemosfi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="13dp"
        android:layout_marginBottom="0dp">


                <TextView
                    android:id="@+id/tvtitulof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo Del la Fiesta"
                    android:textColor="@color/colorTitulo"
                    android:textStyle="bold"
                    android:textSize="22sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorTitulo"/>

            <TextView
                android:id="@+id/tvdescf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Titulo Del la Fiesta"
                android:textColor="@color/colorTitulo"
                android:layout_marginLeft="12dp"
                android:textSize="20sp"/>

    </LinearLayout>

        </androidx.cardview.widget.CardView>



    </androidx.core.widget.NestedScrollView>

</RelativeLayout>